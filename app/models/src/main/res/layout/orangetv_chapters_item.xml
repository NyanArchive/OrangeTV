<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="0dp">

    <ImageView
        android:id="@+id/orangetv_chapters_item__logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:minWidth="60dp"
        android:minHeight="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orangetv_chapters_item__title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/text_base"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/orangetv_chapters_item__logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/orangetv_chapters_item__logo"
        app:layout_constraintTop_toTopOf="@id/orangetv_chapters_item__logo"
        tools:text="Debug" />

    <TextView
        android:id="@+id/orangetv_chapters_item__timestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/text_base"
        app:layout_constraintBottom_toBottomOf="@id/orangetv_chapters_item__logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/orangetv_chapters_item__logo"
        app:layout_constraintTop_toBottomOf="@id/orangetv_chapters_item__title"
        tools:text="Debug" />
</androidx.constraintlayout.widget.ConstraintLayout>